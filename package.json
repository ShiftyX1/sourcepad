{
  "name": "sourcepad",
  "version": "0.0.3",
  "description": "SourcePad - simple code editor with TypeScript and Vite",
  "main": "dist/main/main.js",
  "homepage": "https://github.com/ShiftyX1/sourcepad",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron .",
    "dev:full": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run dev:electron:wait\"",
    "dev:electron:wait": "wait-on http://localhost:5173 && electron .",
    "kill": "chmod +x scripts/kill-processes.sh && ./scripts/kill-processes.sh",
    "kill:force": "chmod +x scripts/kill-processes.sh && sudo ./scripts/kill-processes.sh",
    "kill:nuclear": "sudo pkill -f electron; sudo pkill -f vite; sudo lsof -ti:5173 | xargs kill -9; echo '☢️  Nuclear option executed'",
    "clean": "npm run kill && rm -rf dist dist-electron",
    "clean:full": "npm run kill:force && rm -rf dist node_modules/.vite dist-electron",
    "restart": "npm run kill && npm run dev",
    "restart:force": "npm run kill:force && npm run dev",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "vite build --config vite.config.ts",
    "build:preload": "vite build --config vite.preload.config.ts",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:analyze": "vite build --mode analyze && echo 'Check dist/renderer for bundle analysis'",
    "preview": "vite preview",
    "preview:electron": "npm run build && electron .",
    "test:prod": "npm run build && npm run preview:electron",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "postinstall": "electron-builder install-app-deps",
    "debug:processes": "ps aux | grep -E '(electron|vite|node)' | grep -v grep",
    "debug:ports": "lsof -i:5173",
    "debug:electron": "ps aux | grep -i electron | grep -v grep",
    "debug:bundle": "ls -la dist/renderer/assets/ && echo '---' && ls -la dist/renderer/workers/",
    "debug:monaco": "find dist -name '*monaco*' -o -name '*worker*' | head -20",
    "fix:permissions": "chmod +x scripts/*.sh",
    "fix:electron": "node node_modules/.pnpm/electron@*/node_modules/electron/install.js"
  },
  "build": {
    "appId": "com.sourcepad.editor",
    "productName": "SourcePad",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "ui.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  },
  "keywords": [
    "editor",
    "code",
    "monaco",
    "electron",
    "ide",
    "development",
    "typescript",
    "vite"
  ],
  "author": "Ilya Glazunov <i.glazunov@shiftyspace.ru>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.19",
    "eslint": "^9.33.0",
    "typescript": "^5.3.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "globals": "^16.3.0",
    "monaco-editor": "^0.52.2"
  }
}