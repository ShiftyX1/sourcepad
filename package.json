{
  "name": "sourcepad",
  "version": "0.0.1",
  "description": "SourcePad - simple code editor.",
  "main": "src/main.js",
  "homepage": "https://github.com/ShiftyX1/sourcepad",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "setup": "node scripts/setup-monaco.js",
    "prestart": "npm run setup",
    "prebuild": "npm run setup",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.sourcepad.editor",
    "productName": "SourcePad",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "ui/**/*",
      "scripts/**/*",
      "node_modules/**/*",
      "!node_modules/monaco-editor/esm/**/*",
      "!node_modules/monaco-editor/dev/**/*"
    ],
    "extraResources": [
      {
        "from": "ui/monaco-editor",
        "to": "monaco-editor"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "ui.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "writeUpdateInfo": false,
      "title": "${productName} ${version}"
    },
    "publish": null
  },
  "keywords": [
    "editor",
    "code",
    "monaco",
    "electron",
    "ide",
    "development"
  ],
  "author": "Ilya Glazunov <i.glazunov@shiftyspace.ru>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.19"
  },
  "dependencies": {
    "monaco-editor": "^0.52.2"
  }
}